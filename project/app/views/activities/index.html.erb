<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Date</th>
      <th>Originator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.title %></td>
        <td><%= activity.content %></td>
        <td><%= activity.date.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= activity.originator %></td>
        <td><%= link_to 'Show', activity %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to 'New Activity', new_activity_path %>
<%= link_to 'See Reasons', reasons_path%>
<% end %>

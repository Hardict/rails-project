<p id="notice"><%= notice %></p>

<h1>Listing Reasons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Why</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reasons.each do |reason| %>
      <tr>
        <td><%= reason.name %></td>
        <td><%= reason.why %></td>
        <td><%= reason.activity.title %></td>
        <td><%= link_to 'Show', activity_reason_path(reason.activity,reason) %></td>
        <td><%= link_to 'Edit', edit_activity_reason_path(reason.activity,reason) %></td>
        <td><%= link_to 'Destroy', activity_reason_path(reason.activity,reason), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', activities_path %>
